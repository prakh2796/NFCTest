<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:id="@+id/mainLyt"
    xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/cLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Content"
            />

        <EditText
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/cLabel"
            android:lines="3"
            android:maxLines="4" />

        <TextView
            android:id="@+id/cLabel1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NFC Type"
            android:layout_below="@id/content"
            />

        <Spinner
            android:id="@+id/tagType"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/cLabel1" />

    <TextView
        android:id="@+id/textView_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:layout_below="@id/tagType"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/read_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/textView_explanation"
        android:text="Read"/>
    <Button
        android:id="@+id/write_button"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/read_button"
        android:text="Write"/>

    </RelativeLayout>